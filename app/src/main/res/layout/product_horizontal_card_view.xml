<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <view
                android:id="@+id/imgproduct"
                class="amir.app.business.widget.SquareImageViewHeight_Based"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/product_logo"
                android:transitionName="@string/fragment_image_trans" />

            <view
                android:id="@+id/txtname"
                class="amir.app.business.widget.FarsiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgproduct"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="name"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6d6d6d"
                android:textSize="10sp"
                app:FarsiTypeface="IRANSansMedium" />

            <view
                android:id="@+id/txtdesc"
                class="amir.app.business.widget.FarsiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgproduct"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="desciption"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#6d6d6d"
                android:textSize="8sp"
                app:FarsiTypeface="IRANSans" />

        </LinearLayout>
    </RelativeLayout>
