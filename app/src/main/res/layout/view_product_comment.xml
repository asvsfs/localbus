<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <view
        android:id="@+id/editText"
        class="amir.app.business.widget.FarsiEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:ems="10"
        android:gravity="top|right|center_vertical"
        android:minLines="5"
        android:textColor="#000"
        android:textColorHint="#888" />

    <view
        android:id="@+id/rate"
        class="amir.app.business.widget.RatingBarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        apps:starCount="5"
        apps:starEmpty="@drawable/black_empty_rating"
        apps:starFill="@drawable/yellow_rating"
        apps:starImageSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText" />
</RelativeLayout>