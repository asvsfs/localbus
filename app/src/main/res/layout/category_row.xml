<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <view
        class="amir.app.business.widget.SquareRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="#fff">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_color_selector">

            <ImageView
                app:srcCompat="@drawable/business_logo"
                android:id="@+id/imageView"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/txtname" />

            <view
                android:id="@+id/txtname"
                class="amir.app.business.widget.FarsiTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:singleLine="false"
                android:text="تجارت"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000"
                app:FarsiTypeface="IRANSans"
                android:layout_weight="1"
                android:lines="2"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>


    </view>


</RelativeLayout>